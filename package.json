{
  "name": "SimpleChat",
  "version": "0.0.1",
  "description": "A simple chat program using NodeJs, SocketIO and 6to5",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/js/server.js",
    "build": "npm run build:browserify && npm run build:6to5",
    "build:browserify": "browserify --transform 6to5ify --debug --entry src/es6/public/client.js > src/js/public/client.js",
    "build:6to5": "6to5 src/es6 --out-dir src/js --ignore src/js/public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Noah-Huppert/SimpleChat.git"
  },
  "author": "Noah Huppert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Noah-Huppert/SimpleChat/issues"
  },
  "homepage": "https://github.com/Noah-Huppert/SimpleChat",
  "dependencies": {
    "express": "^4.11.2",
    "socket.io": "^1.3.3"
  },
  "devDependencies": {
    "6to5": "^3.6.4",
    "6to5ify": "^4.1.1",
    "browserify": "^8.1.3"
  }
}
